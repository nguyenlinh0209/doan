<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.study.intro.ui.intro.IntroViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/primaryBackgroundColor">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ctContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <me.relex.circleindicator.CircleIndicator3
                android:id="@+id/indicator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_24"
                android:layout_marginBottom="@dimen/dp_6"
                app:ci_drawable="@drawable/ic_circle_indicator"
                app:ci_gravity="center"
                app:ci_height="@dimen/dp_6"
                app:ci_margin="@dimen/dp_12"
                app:ci_orientation="horizontal"
                app:ci_width="@dimen/dp_6"
                app:layout_constraintBottom_toTopOf="@+id/llAction"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llAction"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_52"
                android:layout_marginHorizontal="@dimen/dp_24"
                android:layout_marginBottom="@dimen/dp_12"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintWidth_max="@dimen/dp_520">

                <TextView
                    android:id="@+id/tvSkip"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/dp_12"
                    android:layout_weight="1"
                    android:background="@drawable/bg_corner_12"
                    android:clickable="true"
                    android:clipToOutline="true"
                    android:focusable="true"
                    android:fontFamily="?attr/fontBold"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="center"
                    android:text="@string/skip"
                    tools:visibility="visible"
                    android:textColor="?attr/detailTextColor"
                    android:textSize="@dimen/sp_16"
                    tools:ignore="UnusedAttribute" />

                <TextView
                    android:id="@+id/tvContinue"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_corner_12"
                    android:backgroundTint="?attr/primaryColor"
                    android:clickable="true"
                    android:clipToOutline="true"
                    android:focusable="true"
                    android:fontFamily="?attr/fontMedium"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="center"
                    android:text="@string/continue_title"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16"
                    tools:ignore="UnusedAttribute" />

            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

</layout>