<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <declare-styleable name="outlineAttrs">
        <attr name="outlineColor" format="color"/>
        <attr name="outlineWidth" format="float"/>
    </declare-styleable>

    <declare-styleable name="SettingItem">
        <attr name="setting_title" format="string" />
        <attr name="setting_icon" format="reference" />
        <attr name="setting_toggleEnabled" format="boolean" />
        <attr name="setting_detail" format="string" />
        <attr name="setting_arrowEnabled" format="boolean" />
        <attr name="setting_showLine" format="boolean" />
        <attr name="setting_title_all_cap" format="boolean" />
        <attr name="setting_show_origin_icon" format="boolean" />
    </declare-styleable>


    <style name="Theme.AIBuddy.Shadow.Default" parent="Theme.Main">
        <item name="sv_mask">@drawable/bg_mask_circle</item>
        <item name="sv_dx">@dimen/dp_1</item>
        <item name="sv_dy">@dimen/dp_2</item>
    </style>

    <declare-styleable name="ShadowView">
        <attr name="sv_mask" format="reference" />
        <attr name="sv_color" format="reference" />
        <attr name="sv_dx" format="reference" />
        <attr name="sv_dy" format="reference" />
    </declare-styleable>




    <declare-styleable name="ColorTheme">
        <attr name="thirdBackgroundColor" format="color" />
        <attr name="disableColor" format="color" />
        <attr name="gradientColors" format="reference" />
        <attr format="reference" name="secondFontBold"/>
    </declare-styleable>


    <style name="Theme.AIBuddy.ClickableView.Outline" parent="Theme.AIBuddy.ClickableView">
        <item name="android:clipToOutline" tools:targetApi="s">true</item>
    </style>

</resources>