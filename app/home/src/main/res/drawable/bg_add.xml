<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#15000000"
                android:endColor="#00000000"
                android:angle="270" />
            <corners
                android:topLeftRadius="@dimen/dp_6"
                android:topRightRadius="@dimen/dp_6"
                android:bottomLeftRadius="@dimen/dp_6"
                android:bottomRightRadius="@dimen/dp_6" />
        </shape>
    </item>

    <item android:bottom="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/priority_normal"
                android:centerColor="@color/priority_normal"
                android:endColor="@color/priority_normal"
                android:angle="135"
                android:type="linear" />
            <corners
                android:topLeftRadius="@dimen/dp_6"
                android:topRightRadius="@dimen/dp_6"
                android:bottomLeftRadius="@dimen/dp_6"
                android:bottomRightRadius="@dimen/dp_6" />
        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="@dimen/dp_2"
                android:color="?attr/primaryColor" />
            <corners
                android:topLeftRadius="@dimen/dp_6"
                android:topRightRadius="@dimen/dp_6"
                android:bottomLeftRadius="@dimen/dp_6"
                android:bottomRightRadius="@dimen/dp_6" />
        </shape>
    </item>

</layer-list>